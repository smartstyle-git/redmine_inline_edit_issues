<%= form_tag @update_url, :id => 'inline_edit_form', method: :put do %>
  <%= hidden_field_tag 'back_url', @back_url %>
  <div class="autoscroll">
    <table class="list issues">
      <thead>
      <% @query_inline_columns.each do |column| %>
        <%= column_header(@query, column) %>
      <% end %>
      </thead>
      <% previous_group = false %>
      <tbody>
      <% @issues.each do |issue| %>
        <%= fields_for "issues[]", issue do |f| %>
          <% if @query.grouped? && (group = @query.group_by_column.value(issue)) != previous_group %>
            <% reset_cycle %>

            <% if previous_group %>
              <%= render 'group_totals', group: previous_group, query: @query %>
            <% end %>

            <tr class="group open">
              <td colspan="<%= @query_inline_columns.size + 2 %>">
                <span class="expander" onclick="toggleRowGroup(this);">&nbsp;</span>
                <%= group.blank? ? l(:label_none) : column_content(@query.group_by_column, issue) %>
                <span class="count"><%= @issue_count_by_group[group] %></span>
                <%= link_to_function("#{l(:button_collapse_all)}/#{l(:button_expand_all)}", "toggleAllRowGroups(this)", :class => 'toggle-all') %>
              </td>
            </tr>
            <% previous_group = group %>
          <% end %>
          <tr id="issue-<%= issue.id %>" class="hascontextmenu <%= cycle('odd', 'even') %> <%= issue.css_classes %> ">
            <% @query_inline_columns.each do |column| %>
              <td class="<%= column.css_classes %> <%= group_class_name(group) %>"> <%= column_form_content(column, issue, f) %> </td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
      <% if previous_group %>
        <%= render 'group_totals', group: previous_group, query: @query %>
      <% end %>
      <tr class="inline_totals">
        <% @query_inline_columns.each do |column| %>
          <td id="total-<%= column.name %>"><%= column_total(column, @issues) %></td>
        <% end %>
      </tr>
      
      <!-- New issue row -->
      <tr class="new-issue-row">
        <td colspan="<%= @query_inline_columns.size %>" style="padding: 15px; background: #f0f8ff; border-top: 2px solid #4a90e2;">
          <%= render 'new_issue_fields', query: @query, project: @project %>
          <div style="text-align: right; margin-top: 10px;">
            <button type="button" id="add-new-issue-row" style="padding: 4px 12px; background: #5cb85c; color: white; border: none; border-radius: 3px; cursor: pointer; font-size: 18px; font-weight: bold;">+</button>
          </div>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
  <%= submit_tag l(:button_submit) %>
  <input name="resetform" type="reset" id="inline_edit_reset" value="Reset"/>
  <%= link_to l(:button_cancel), @back_url %>
<% end %>
